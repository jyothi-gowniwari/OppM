<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_profile"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:tint="@color/black"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_image"
            android:text="Username"
            android:textAllCaps="true"
            android:tint="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/username"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/row1"
        android:paddingTop="110dp"
        android:layout_below="@+id/rl_profile">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="7dp"
            android:text="Dashboard"
            android:drawableTop="@drawable/ic_home"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="7dp"
            android:text="Task"
            android:drawableTop="@drawable/ic_event_note_black_24dp"></TextView>        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/row1"/>


    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:orientation="horizontal"
        android:paddingTop="190dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="7dp"
            android:text="Account"
            android:drawableTop="@drawable/ic_event_note_black_24dp"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:layout_marginRight="17dp"
            android:padding="7dp"
            android:textColor="@color/black"
            android:text="Contact"
            android:drawableTop="@drawable/ic_account_circle_black_24dp"></TextView>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/slivergray"
        android:paddingTop="200dp"
        android:layout_below="@id/row2"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/row3"
        android:paddingTop="270dp"
        android:layout_below="@+id/row2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="7dp"
            android:text="Opportunity"
            android:drawableTop="@drawable/opportunity"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="17dp"
            android:background="@drawable/black_rectangle"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginRight="17dp"
            android:padding="7dp"
            android:text="logout"
            android:drawableTop="@drawable/logout"></TextView>


    </LinearLayout>

</LinearLayout>
